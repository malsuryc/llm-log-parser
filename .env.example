# API Configuration
OPENAI_API_URL=http://your-api-endpoint/v1
OPENAI_API_KEY=your-api-key-here

# Log File Configuration
LOG_FILE_PATH=/path/to/your/logfile.log

# Sliding Window Configuration (Optional)
WINDOW_SIZE=100          # Number of lines per window
STEP_SIZE=90             # Step size (overlap = WINDOW_SIZE - STEP_SIZE)
MAX_WINDOWS=             # Maximum windows to process (empty = no limit)
DELAY_SECONDS=2          # Delay between API calls to avoid rate limiting
